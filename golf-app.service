[Unit]
Description=Golf Fitting API
After=network.target

[Service]
User=ec2-user
WorkingDirectory=/home/ec2-user/golf-app
Environment="PATH=/home/ec2-user/golf-app/venv/bin"
ExecStart=/home/ec2-user/golf-app/venv/bin/uvicorn app:app --host 0.0.0.0 --port 8000
Restart=always

[Install]
WantedBy=multi-user.target 